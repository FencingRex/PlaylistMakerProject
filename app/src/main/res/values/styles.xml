<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainScreen">
        <item name = "android:orientation">vertical</item>
        <item name = "android:background">@color/yp_blue</item>
        <item name = "android:padding">@dimen/padding</item>
    </style>

    <style name="settingsScreen">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="switchButton" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/teal_knob</item>
        <item name="trackTint">@color/teal_track</item>

    </style>

    <style name="settingsScreenIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/yp_text_gray</item>
    </style>

    <style name="settingsMenuText">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="mainMenuButtons" parent="Widget.MaterialComponents.Button">

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">@dimen/layoutWeight</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="settingsMenu">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">@dimen/paddingVerticalItem</item>
        <item name="android:paddingStart">@dimen/paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/paddingHorizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="searchDisplayText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">61dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>
